@model FISCA.Dominio.Entidades.Usuario
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<div class="container-fluid">
    <div class="row">
        <aside class="col-md-2">
            @await Html.PartialAsync("_Opciones")
        </aside>
        <div class="col-md-9">
            <div class="w-100 card border-0 p-4">
                <div class="card-header bg-danger bg-gradient m-lg-0 py-3">
                    <div class="row">
                        <div class="col-12 text-center">
                            <h2 class="text-white py-2">Eliminar Usuario</h2>
                        </div>
                    </div>
                </div>
                <div class="card-body border p-4">
                    <form asp-action="Eliminar" method="post" class="row">
                        <input asp-for="IdUsuario" type="hidden" />
                        <div class="p-3">
                            <div asp-validation-summary="All"></div>

                            <div class="form-floating py-2 col-12">
                                <input asp-for="NombreUsuario" class="form-control border shadow" readonly />
                                <label asp-for="NombreUsuario" class="ms-2">Nombre de Usuario</label>
                            </div>

                            <div class="form-floating py-2 col-12">
                                <input asp-for="PassUsuario" class="form-control border shadow" readonly />
                                <label asp-for="PassUsuario" class="ms-2">Contraseña</label>
                            </div>

                            <div class="form-floating py-2 col-12">
                                <input asp-for="NivelUsuario" class="form-control border shadow" readonly />
                                <label asp-for="NivelUsuario" class="ms-2">Nivel de Usuario</label>
                            </div>

                            <div class="form-floating py-2 col-12">
                                <input asp-for="Codigo" class="form-control border shadow" readonly />
                                <label asp-for="Codigo" class="ms-2">Código</label>
                            </div>

                            <div class="row pt-2">
                                <div class="col-6 col-md-3">
                                    <button type="submit" class="btn btn-danger w-100">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </div>
                                <div class="col-6 col-md-3">
                                    <a asp-controller="Usuarios" asp-action="Index" class="btn btn-secondary w-100">
                                        <i class="bi bi-x-circle"></i> Cancelar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
