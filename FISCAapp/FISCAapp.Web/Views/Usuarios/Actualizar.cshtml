@model FISCA.Dominio.Entidades.Usuario
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<div class="container-fluid">
    <div class="row">
        <aside class="col-md-3">
            @await Html.PartialAsync("_Opciones")
        </aside>
        <div class="col-md-9">
            <h2>Actualizar Usuario</h2>
            <form asp-action="Actualizar" method="post">
                <input asp-for="IdUsuario" type="hidden" />
                <div asp-validation-summary="All"></div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="NombreUsuario" class="form-control border shadow" />
                    <label asp-for="NombreUsuario" class="ms-2">Nombre de Usuario</label>
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="PassUsuario" class="form-control border shadow" />
                    <label asp-for="PassUsuario" class="ms-2">Contraseña</label>
                    <span asp-validation-for="PassUsuario" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="NivelUsuario" class="form-control border shadow" />
                    <label asp-for="NivelUsuario" class="ms-2">Nivel de Usuario</label>
                    <span asp-validation-for="NivelUsuario" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Codigo" class="form-control border shadow" />
                    <label asp-for="Codigo" class="ms-2">Código</label>
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Actualizar
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Usuarios" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
