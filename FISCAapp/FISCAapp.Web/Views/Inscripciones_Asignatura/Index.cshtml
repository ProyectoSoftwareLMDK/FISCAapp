@model IEnumerable<FISCA.Dominio.Entidades.Inscripciones_Asignaturas>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<h2>Lista de Inscripciones de Asignaturas</h2>

<form method="get" asp-controller="Inscripciones_Asignatura" asp-action="Index" class="d-flex justify-content-between mb-3">
    <div class="input-group w-50">
        <input type="text" name="searchString" class="form-control" placeholder="Buscar por ID de asignatura..." aria-label="Buscar por ID de asignatura" value="@ViewData["CurrentFilter"]">
        <button class="btn btn-outline-secondary" type="submit" id="button-search"><i class="bi bi-search"></i></button>
    </div>
    <a asp-controller="Inscripciones_Asignatura" asp-action="Agregar" class="btn btn-success mx-2">Agregar <i class="bi bi-file-earmark-plus-fill"></i></a>
</form>

<table class="table table-light table-bordered table-striped">
    <thead>
        <tr>
            <th>ID Inscripción</th>
            <th>ID Asignatura</th>
            <th>ID Estudiante</th>
            <th>Fecha Inscripción</th>
            <th>Observaciones</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inscripcion in Model)
        {
            <tr>
                <td>@inscripcion.IdInscripcion</td>
                <td>@inscripcion.IdAsignatura</td>
                <td>@inscripcion.IdEstudiante</td>
                <td>@inscripcion.FechaInscripcion?.ToString("dd/MM/yyyy")</td>
                <td>@inscripcion.Observaciones</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="Inscripciones_Asignatura" asp-action="Actualizar" asp-route-idInscripcion="@inscripcion.IdInscripcion" class="btn btn-success mx-2">Actualizar <i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Inscripciones_Asignatura" asp-action="Eliminar" asp-route-idInscripcion="@inscripcion.IdInscripcion" class="btn btn-danger mx-2">Eliminar <i class="bi bi-trash"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

