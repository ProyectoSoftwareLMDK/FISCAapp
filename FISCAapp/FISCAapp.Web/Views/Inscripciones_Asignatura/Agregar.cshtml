@model FISCA.Dominio.Entidades.Inscripciones_Asignaturas
<!-- Incluye solo una vez Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<!-- Incluye toastr CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" integrity="sha512-3pIirOrwegjM6erE5gPSwkUzO+3cTjpnV9lexlNZqvupR64iZBnOOTiiLPb9M36zpMScbmUNIcHUqKD47M719g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<!-- Tus estilos personalizados -->
<link rel="stylesheet" href="~/FISCAapp.Web.styles.css" asp-append-version="true" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>    <!-- Incluye toastr JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container-fluid">
    <div class="row">
        <aside class="col-md-2">
            @await Html.PartialAsync("_Opciones")
        </aside>
        <div class="col-md-9">
            <h2>Agregar Nueva Inscripción</h2>

            <form method="post">
                <div class="form-floating py-2 col-12">
                    <select asp-for="IdAsignatura" asp-items="@(new SelectList(ViewBag.Asignaturas, "IdAsignatura", "NombreAsignatura"))" class="form-control border shadow">
                        <option value="">Seleccione una asignatura</option>
                    </select>
                    <label asp-for="IdAsignatura" class="ms-2">Asignatura</label>
                    <span asp-validation-for="IdAsignatura" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <select asp-for="IdEstudiante" asp-items="@(new SelectList(ViewBag.Estudiantes, "IdEstudiante", "NombresEstudiante"))" class="form-control border shadow">
                        <option value="">Seleccione un estudiante</option>
                    </select>
                    <label asp-for="IdEstudiante" class="ms-2">Estudiante</label>
                    <span asp-validation-for="IdEstudiante" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="FechaInscripcion" type="date" class="form-control border shadow" />
                    <label asp-for="FechaInscripcion" class="ms-2">Fecha de Inscripción</label>
                    <span asp-validation-for="FechaInscripcion" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Observaciones" class="form-control border shadow"></textarea>
                    <label asp-for="Observaciones" class="ms-2">Observaciones</label>
                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Agregar
                </button>
                <a asp-controller="Inscripciones_Asignatura" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
