@model FISCA.Dominio.Entidades.Numeros_Asignaciones

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<h2>Actualizar Número de Asignación</h2>

<form asp-controller="NumerosAsignaturas" asp-action="Actualizar" method="post">
    <input type="hidden" asp-for="IdNumerosAsignaciones" />
    <div class="mb-3">
        <label for="numeroAsignado" class="form-label">Número Asignado</label>
        <input type="text" class="form-control" id="numeroAsignado" name="NumeroAsignado" value="@Model.NumeroAsignado" required />
    </div>
    <div class="mb-3">
        <label for="idDocente" class="form-label">ID del Docente</label>
        <input type="text" class="form-control" id="idDocente" name="IdDocente" value="@Model.IdDocente" required />
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a asp-controller="NumerosAsignaturas" asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
