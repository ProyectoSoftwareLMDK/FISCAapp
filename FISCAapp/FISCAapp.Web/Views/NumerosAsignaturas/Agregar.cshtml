@model FISCA.Dominio.Entidades.Numeros_Asignaciones

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<h2>Agregar Número de Asignación</h2>

<form method="post">
    <div class="form-floating py-2 col-12">
        <input asp-for="NumeroAsignado" class="form-control border shadow" />
        <label asp-for="NumeroAsignado" class="ms-2">Número Asignado</label>
        <span asp-validation-for="NumeroAsignado" class="text-danger"></span>
    </div>

    <div class="form-floating py-2 col-12">
        <select asp-for="IdDocente" asp-items="@(new SelectList(ViewBag.Docentes, "IdDocente", "NombresDocente"))" class="form-control border shadow">
            <option value="">Seleccione un docente</option>
        </select>
        <label asp-for="IdDocente" class="ms-2">Docente</label>
        <span asp-validation-for="IdDocente" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="bi bi-check-circle"></i> Agregar
    </button>
    <a asp-controller="NumerosAsignaturas" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-x-circle"></i> Cancelar
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
