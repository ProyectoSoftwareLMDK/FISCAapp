@model List<FISCA.Dominio.Entidades.Numeros_Asignaciones>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<h2>Lista de Números de Asignación</h2>

<form method="get" asp-controller="NumerosAsignaturas" asp-action="Index" class="d-flex justify-content-between mb-3">
    <div class="input-group w-50">
        <input type="text" name="searchString" class="form-control" placeholder="Buscar por numero asignado..." aria-label="Buscar por numero asignado" value="@ViewData["CurrentFilter"]">
        <button class="btn btn-outline-secondary" type="submit" id="button-search"><i class="bi bi-search"></i></button>
    </div>
    <a asp-controller="NumerosAsignaturas" asp-action="Agregar" class="btn btn-success mx-2"><i class="bi bi-plus"></i> Agregar Número de Asignación</a>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Número Asignado</th>
            <th>Docente</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var numero in Model)
        {
            <tr>
                <td>@numero.NumeroAsignado</td>
                <td>@numero.IdDocente</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="NumerosAsignaturas" asp-action="Actualizar" asp-route-idNumeroAsignacion="@numero.IdNumerosAsignaciones" class="btn btn-primary mx-2"><i class="bi bi-pencil"></i> Actualizar</a>
                        <a asp-controller="NumerosAsignaturas" asp-action="Eliminar" asp-route-idNumeroAsignacion="@numero.IdNumerosAsignaciones" class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


