@model IEnumerable<FISCA.Dominio.Entidades.Grupo>

<table border="1">
    <thead>
        <tr>
            <th>IdGrupo</th>
            <th>NumeroGrupo</th>
            <th>NombreGrupo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grupo in Model)
        {
            <tr>
                <td>@grupo.IdGrupo</td>
                <td>@grupo.NumeroGrupo</td>
                <td>@grupo.NombreGrupo</td>
            </tr>
        }
    </tbody>
</table>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid black;
        padding: 4px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }
</style>