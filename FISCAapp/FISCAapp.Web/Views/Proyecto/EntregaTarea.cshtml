@model IEnumerable<FISCA.Dominio.Entidades.EntregaTarea>

<table border="1">
    <thead>
        <tr>
            <th>IdEntregaTareas</th>
            <th>CodigoTareaDocente</th>
            <th>IdEstudiante</th>
            <th>IdAsignatura</th>
            <th>Descripcion</th>
            <th>CodigoEnvioTarea</th>
            <th>Archivo</th>
            <th>FechaEntrega</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entregaTarea in Model)
        {
            <tr>
                <td>@entregaTarea.IdEntregaTareas</td>
                <td>@entregaTarea.CodigoTareaDocente</td>
                <td>@entregaTarea.IdEstudiante</td>
                <td>@entregaTarea.IdAsignatura</td>
                <td>@entregaTarea.Descripcion</td>
                <td>@entregaTarea.CodigoEnvioTarea</td>
                <td>@entregaTarea.Archivo</td>
                <td>@(entregaTarea.FechaEntrega.HasValue ? entregaTarea.FechaEntrega.Value.ToString("yyyy-MM-dd") : "")</td>
            </tr>
        }
    </tbody>
</table>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid black;
        padding: 4px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }
</style>
