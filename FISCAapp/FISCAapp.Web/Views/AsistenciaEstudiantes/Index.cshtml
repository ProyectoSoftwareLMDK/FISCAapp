@model Tuple<IEnumerable<FISCA.Dominio.Entidades.Estudiante>, int, string>

@{
    ViewData["Title"] = "Estudiantes Inscritos en " + Model.Item3;
}

<h2>Estudiantes Inscritos en @Model.Item3</h2>

<form asp-controller="AsistenciaEstudiantes" asp-action="Index" method="post">
    <input type="hidden" name="IdAsignacion" value="@Model.Item2" />

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID Estudiante</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Presente</th>
                <th>Tarde</th>
                <th>Falta</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var estudiante in Model.Item1)
            {
                <tr>
                    <td>@estudiante.IdEstudiante</td>
                    <td>@estudiante.NombresEstudiante</td>
                    <td>@estudiante.ApellidosEstudiante</td>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="presente-@estudiante.IdEstudiante" name="asistencia[@estudiante.IdEstudiante]" value="Presente" />
                            <label class="form-check-label" for="presente-@estudiante.IdEstudiante">Presente</label>
                        </div>
                    </td>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="tarde-@estudiante.IdEstudiante" name="asistencia[@estudiante.IdEstudiante]" value="Tarde" />
                            <label class="form-check-label" for="tarde-@estudiante.IdEstudiante">Tarde</label>
                        </div>
                    </td>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="falta-@estudiante.IdEstudiante" name="asistencia[@estudiante.IdEstudiante]" value="Falta" />
                            <label class="form-check-label" for="falta-@estudiante.IdEstudiante">Falta</label>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary mt-3">
        Registrar Asistencia
    </button>
</form>
