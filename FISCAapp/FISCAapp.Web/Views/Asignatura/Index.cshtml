@model IEnumerable<FISCA.Dominio.Entidades.Asignatura>

<h2>Lista de Asignaturas</h2>
<div class="w-5 btn-group" role="group">
    <a asp-controller="Asignatura" asp-action="Agregar" class="btn btn-success mx-2">
        Agregar
    </a>
</div>
<table class="table table-light table-bordered table-striped" border="1">
    <thead>
        <tr>
            <th>Id Asignatura</th>
            <th>Nombre Asignatura</th>
            <th>Id Carrera</th>
            <th>Id Grupo</th>
            <th>Id Cuatrimestre</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var asignatura in Model)
        {
            <tr>
                <td>@asignatura.IdAsignatura</td>
                <td>@asignatura.NombreAsignatura</td>
                <td>@asignatura.IdCarrera</td>
                <td>@asignatura.IdGrupo</td>
                <td>@asignatura.IdCuatrimestre</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Asignatura" asp-action="Actualizar" asp-route-idAsignatura="@asignatura.IdAsignatura" class="btn btn-success mx-2">
                            Actualizar
                        </a>
                        <a asp-controller="Asignatura" asp-action="Eliminar" asp-route-idAsignatura="@asignatura.IdAsignatura" class="btn btn-danger mx-2">
                            Eliminar
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
