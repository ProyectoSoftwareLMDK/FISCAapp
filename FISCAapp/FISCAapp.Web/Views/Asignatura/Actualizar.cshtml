@model FISCA.Dominio.Entidades.Asignatura

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<div class="container-fluid">
    <div class="row">
        <aside class="col-md-2">
            @await Html.PartialAsync("_Opciones")
        </aside>
        <div class="col-md-9">
            <h2>Actualizar Asignatura</h2>

            <form method="post">
                <input asp-for="IdAsignatura" hidden />

                <div class="form-floating py-2 col-12">
                    <input asp-for="NombreAsignatura" class="form-control border shadow" />
                    <label asp-for="NombreAsignatura" class="ms-2">Nombre</label>
                    <span asp-validation-for="NombreAsignatura" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <select asp-for="IdCarrera" asp-items="@(new SelectList(ViewBag.Carreras, "IdCarrera", "NombreCarrera"))" class="form-control border shadow">
                        <option value="">Seleccione una carrera</option>
                    </select>
                    <label asp-for="IdCarrera" class="ms-2">Carrera</label>
                    <span asp-validation-for="IdCarrera" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <select asp-for="IdGrupo" asp-items="@(new SelectList(ViewBag.Grupos, "IdGrupo", "NombreGrupo"))" class="form-control border shadow">
                        <option value="">Seleccione un grupo</option>
                    </select>
                    <label asp-for="IdGrupo" class="ms-2">Grupo</label>
                    <span asp-validation-for="IdGrupo" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <select asp-for="IdCuatrimestre" asp-items="@(new SelectList(ViewBag.Cuatrimestres, "IdCuatrimestre", "NombreCuatrimestre"))" class="form-control border shadow">
                        <option value="">Seleccione un cuatrimestre</option>
                    </select>
                    <label asp-for="IdCuatrimestre" class="ms-2">Cuatrimestre</label>
                    <span asp-validation-for="IdCuatrimestre" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Actualizar
                </button>
                <a asp-controller="Asignatura" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
