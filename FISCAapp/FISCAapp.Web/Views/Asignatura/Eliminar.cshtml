@model FISCA.Dominio.Entidades.Asignatura

<!-- Incluye solo una vez Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<!-- Incluye toastr CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" integrity="sha512-3pIirOrwegjM6erE5gPSwkUzO+3cTjpnV9lexlNZqvupR64iZBnOOTiiLPb9M36zpMScbmUNIcHUqKD47M719g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<!-- Tus estilos personalizados -->
<link rel="stylesheet" href="~/FISCAapp.Web.styles.css" asp-append-version="true" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>    <!-- Incluye toastr JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<div class="container-fluid">
    <div class="row">
        <aside class="col-md-2">
            @await Html.PartialAsync("_Opciones")
        </aside>
        <div class="col-md-9">
            <h2>Eliminar Asignatura</h2>

            <form method="post" id="eliminarForm">
                <input asp-for="IdAsignatura" hidden />

                <div class="form-floating py-2 col-12">
                    <input asp-for="NombreAsignatura" class="form-control border shadow" readonly />
                    <label asp-for="NombreAsignatura" class="ms-2">Nombre Asignatura</label>
                    <span asp-validation-for="NombreAsignatura" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="IdCarrera" class="form-control border shadow" readonly />
                    <label asp-for="IdCarrera" class="ms-2">ID Carrera</label>
                    <span asp-validation-for="IdCarrera" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="IdGrupo" class="form-control border shadow" readonly />
                    <label asp-for="IdGrupo" class="ms-2">ID Grupo</label>
                    <span asp-validation-for="IdGrupo" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="IdCuatrimestre" class="form-control border shadow" readonly />
                    <label asp-for="IdCuatrimestre" class="ms-2">ID Cuatrimestre</label>
                    <span asp-validation-for="IdCuatrimestre" class="text-danger"></span>
                </div>

                <!-- Modal de confirmación -->
                <div class="modal fade" id="confirmarEliminarModal" tabindex="-1" aria-labelledby="confirmarEliminarModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="confirmarEliminarModalLabel">¿Estás seguro de eliminar?</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>Esta acción eliminará permanentemente la asignatura. ¿Deseas continuar?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </div>
                        </div>
                    </div>
                </div>

                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmarEliminarModal">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
                <a asp-controller="Asignatura" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
