@model FISCA.Dominio.Entidades.Grupo

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<div class="container-fluid">
    <div class="row">
        <aside class="col-md-3">
            @await Html.PartialAsync("_Opciones")
        </aside>
        <div class="col-md-9">
            <h2>Agregar Nuevo Grupo</h2>

            <form method="post">
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.NumeroGrupo" class="form-control border shadow" />
                    <label asp-for="NumeroGrupo" class="ms-2">Número de Grupo</label>
                    <span asp-validation-for="NumeroGrupo" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.NombreGrupo" class="form-control border shadow" />
                    <label asp-for="NombreGrupo" class="ms-2">Nombre de Grupo</label>
                    <span asp-validation-for="NombreGrupo" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Agregar
                </button>
                <a asp-controller="GrupoSeccion" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
