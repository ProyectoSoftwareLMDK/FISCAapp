@model IEnumerable<FISCA.Dominio.Entidades.Horario>

<h2>Lista de Horarios</h2>

<div class="w-5 btn-group" role="group">
    <a asp-controller="Horario" asp-action="Agregar" class="btn btn-success mx-2">Agregar</a>
</div>

<table class="table table-light table-bordered table-striped">
    <thead>
        <tr>
            <th>IdHorario</th>
            <th>Nombre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var horario in Model)
        {
            <tr>
                <td>@horario.IdHorario</td>
                <td>@horario.NombreHorario</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Horario" asp-action="Actualizar" asp-route-id="@horario.IdHorario" class="btn btn-success mx-2">Actualizar</a>
                        <a asp-controller="Horario" asp-action="Eliminar" asp-route-id="@horario.IdHorario" class="btn btn-danger mx-2">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
