@model FISCA.Dominio.Entidades.Turno

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-danger bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Eliminar Turno</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form asp-action="Eliminar" method="post" class="row">
            <input asp-for="IdTurno" type="hidden" />
            <div class="p-3">
                <div asp-validation-summary="All"></div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="NombreTurno" class="form-control border shadow" readonly />
                    <label asp-for="NombreTurno" class="ms-2">Nombre del turno</label>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-trash"></i> Eliminar
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Turnos" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}