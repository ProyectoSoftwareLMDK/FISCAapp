@model FISCA.Dominio.Entidades.Turno

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<div class="container-fluid">
    <div class="row">
        <aside class="col-md-2">
            @await Html.PartialAsync("_Opciones")
        </aside>
        <div class="col-md-9">
            <div class="w-100 card border-0 p-4">
                <div class="card-header bg-success bg-gradient m-lg-0 py-3">
                    <div class="row">
                        <div class="col-12 text-center">
                            <h2 class="text-white py-2">Agregar nuevo turno</h2>
                        </div>
                    </div>
                </div>
                <div class="card-body border p-4">
                    <form asp-action="Agregar" method="post" class="row">
                        <div class="p-3">
                            <div asp-validation-summary="All"></div>

                            <div class="form-floating py-2 col-12">
                                <input asp-for="NombreTurno" class="form-control border shadow" />
                                <label asp-for="NombreTurno" class="ms-2">Nombre del turno</label>
                                <span asp-validation-for="NombreTurno" class="text-danger"></span>
                            </div>

                            <div class="row pt-2">
                                <div class="col-6 col-md-3">
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="bi bi-check-circle"></i> Agregar
                                    </button>
                                </div>
                                <div class="col-6 col-md-3">
                                    <a asp-controller="Turnos" asp-action="Index" class="btn btn-secondary w-100">
                                        <i class="bi bi-x-circle"></i> Cancelar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
