@model IEnumerable<FISCA.Dominio.Entidades.Turno>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<div class="container-fluid">
    <div class="row">
        <aside class="col-md-3">
            @await Html.PartialAsync("_Opciones")
        </aside>
        <div class="col-md-9">
            <h2>Gestión de Turnos</h2>

            <form method="get" asp-controller="Turnos" asp-action="Index" class="d-flex justify-content-between mb-3">
                <div class="input-group w-50">
                    <input type="text" name="searchString" class="form-control" placeholder="Buscar turno..." aria-label="Buscar turno" value="@ViewData["CurrentFilter"]">
                    <button class="btn btn-outline-secondary" type="submit" id="button-search"><i class="bi bi-search"></i></button>
                </div>
                <a asp-controller="Turnos" asp-action="Agregar" class="btn btn-success mx-2">Agregar <i class="bi bi-file-earmark-plus-fill"></i></a>
            </form>

            <table class="table table-light table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Nombre del Turno</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var turno in Model)
                    {
                        <tr>
                            <td>@turno.NombreTurno</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Turnos" asp-action="Actualizar" asp-route-id="@turno.IdTurno" class="btn btn-success mx-2">
                                        Actualizar <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-controller="Turnos" asp-action="Eliminar" asp-route-id="@turno.IdTurno" class="btn btn-danger mx-2">
                                        Eliminar <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
