@model IEnumerable<FISCA.Dominio.Entidades.Turno>

<h2>Lista de Turnos</h2>
<div class="w-5 btn-group" role="group">
    <a asp-controller="Turnos" asp-action="Agregar" class="btn btn-success mx-2">
        Agregar
    </a>
</div>
<table class="table table-light table-bordered table-striped" border="1">
    <thead>
        <tr>
            <th>Nombre del Turno</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var turno in Model)
        {
            <tr>
                <td>@turno.NombreTurno</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Turnos" asp-action="Actualizar" asp-route-id="@turno.IdTurno" class="btn btn-success mx-2">
                            Actualizar
                        </a>
                        <a asp-controller="Turnos" asp-action="Eliminar" asp-route-id="@turno.IdTurno" class="btn btn-danger mx-2">
                            Eliminar
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>