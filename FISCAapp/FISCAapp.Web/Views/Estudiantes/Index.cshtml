@model IEnumerable<FISCA.Dominio.Entidades.Estudiante>

<h2>Lista de Estudiantes</h2>
<div class="w-5 btn-group" role="group">
    <a asp-controller="Estudiantes" asp-action="Agregar" class="btn btn-success mx-2">
        Agregar
    </a>
</div>
<table class="table table-light table-bordered table-striped" border="1">
    <thead>
        <tr>
            <th>Carne</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Cédula</th>
            <th>Correo</th>
            <th>Celular</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estudiante in Model)
        {
            <tr>
                <td>@estudiante.CarnetEstudiante</td>
                <td>@estudiante.NombresEstudiante</td>
                <td>@estudiante.ApellidosEstudiante</td>
                <td>@estudiante.CedulaEstudiante</td>
                <td>@estudiante.CorreoEstudiante</td>
                <td>@estudiante.CelularEstudiante</td>
                <td>@estudiante.TelefonoEstudiante</td>
                <td>@estudiante.DireccionEstudiante</td>
                <td>@estudiante.Estado == 1 ? "Activo" : "Inactivo"</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Estudiantes" asp-action="Actualizar" asp-route-Id="@estudiante.IdEstudiante" class="btn btn-success mx-2">
                            Actualizar
                        </a>
                        <a asp-controller="Estudiantes" asp-action="Eliminar" asp-route-Id="@estudiante.IdEstudiante" class="btn btn-danger mx-2">
                            Eliminar
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
