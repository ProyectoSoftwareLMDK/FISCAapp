@model IEnumerable<FISCA.Dominio.Entidades.Estudiante>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<h2>Lista de Estudiantes</h2>

<form method="get" asp-controller="Estudiantes" asp-action="Index" class="d-flex justify-content-between mb-3">
    <div class="input-group w-50">
        <input type="text" name="searchString" class="form-control" placeholder="Buscar estudiante..." aria-label="Buscar estudiante" value="@ViewData["CurrentFilter"]">
        <button class="btn btn-outline-secondary" type="submit" id="button-search"><i class="bi bi-search"></i></button>
    </div>
    <a asp-controller="Estudiantes" asp-action="Agregar" class="btn btn-success mx-2">Agregar <i class="bi bi-file-earmark-plus-fill"></i></a>
</form>

<table class="table table-light table-bordered table-striped">
    <thead>
        <tr>
            <th>Carnet</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Cédula</th>
            <th>Correo</th>
            <th>Celular</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estudiante in Model)
        {
            <tr>
                <td>@estudiante.CarnetEstudiante</td>
                <td>@estudiante.NombresEstudiante</td>
                <td>@estudiante.ApellidosEstudiante</td>
                <td>@estudiante.CedulaEstudiante</td>
                <td>@estudiante.CorreoEstudiante</td>
                <td>@estudiante.CelularEstudiante</td>
                <td>@estudiante.TelefonoEstudiante</td>
                <td>@estudiante.DireccionEstudiante</td>
                <td>@(estudiante.Estado == 1 ? "Activo" : "Inactivo")</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Estudiantes" asp-action="Actualizar" asp-route-id="@estudiante.IdEstudiante" class="btn btn-success mx-2">
                            Actualizar <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-controller="Estudiantes" asp-action="Eliminar" asp-route-id="@estudiante.IdEstudiante" class="btn btn-danger mx-2">
                            Eliminar <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
