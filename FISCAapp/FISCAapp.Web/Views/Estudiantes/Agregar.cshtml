@model FISCA.Dominio.Entidades.Estudiante
<!-- Incluye solo una vez Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<!-- Incluye toastr CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" integrity="sha512-3pIirOrwegjM6erE5gPSwkUzO+3cTjpnV9lexlNZqvupR64iZBnOOTiiLPb9M36zpMScbmUNIcHUqKD47M719g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<!-- Tus estilos personalizados -->
<link rel="stylesheet" href="~/FISCAapp.Web.styles.css" asp-append-version="true" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>    <!-- Incluye toastr JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container-fluid">
    <div class="row">
        <aside class="col-md-2">
            @await Html.PartialAsync("_Opciones")
        </aside>
        <div class="col-md-9">
            <h2>Agregar nuevo estudiante</h2>

            <form asp-action="Agregar" method="post">
                <div asp-validation-summary="All"></div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="CarnetEstudiante" class="form-control border shadow" />
                    <label asp-for="CarnetEstudiante" class="ms-2">Carnet</label>
                    <span asp-validation-for="CarnetEstudiante" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="NombresEstudiante" class="form-control border shadow" />
                    <label asp-for="NombresEstudiante" class="ms-2">Nombres</label>
                    <span asp-validation-for="NombresEstudiante" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="ApellidosEstudiante" class="form-control border shadow" />
                    <label asp-for="ApellidosEstudiante" class="ms-2">Apellidos</label>
                    <span asp-validation-for="ApellidosEstudiante" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="CedulaEstudiante" class="form-control border shadow" />
                    <label asp-for="CedulaEstudiante" class="ms-2">Cédula</label>
                    <span asp-validation-for="CedulaEstudiante" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="CorreoEstudiante" class="form-control border shadow" />
                    <label asp-for="CorreoEstudiante" class="ms-2">Correo</label>
                    <span asp-validation-for="CorreoEstudiante" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="CelularEstudiante" class="form-control border shadow" />
                    <label asp-for="CelularEstudiante" class="ms-2">Celular</label>
                    <span asp-validation-for="CelularEstudiante" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="TelefonoEstudiante" class="form-control border shadow" />
                    <label asp-for="TelefonoEstudiante" class="ms-2">Teléfono</label>
                    <span asp-validation-for="TelefonoEstudiante" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="DireccionEstudiante" class="form-control border shadow" />
                    <label asp-for="DireccionEstudiante" class="ms-2">Dirección</label>
                    <span asp-validation-for="DireccionEstudiante" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Estado" class="form-control border shadow" />
                    <label asp-for="Estado" class="ms-2">Estado</label>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Agregar
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Estudiantes" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
