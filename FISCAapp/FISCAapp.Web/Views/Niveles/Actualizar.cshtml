@model FISCA.Dominio.Entidades.Nivel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actualizar Nivel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Barra de opciones a la izquierda -->
            <aside class="col-md-3">
                @await Html.PartialAsync("_Opciones")
            </aside>

            <!-- Contenido principal a la derecha -->
            <div class="col-md-9">
                <h2>Actualizar Nivel</h2>

                <form method="post">
                    <input asp-for="IdNivel" hidden />

                    <div class="form-floating py-2 col-12">
                        <input asp-for="NombreNivel" class="form-control border shadow" />
                        <label asp-for="NombreNivel" class="ms-2">Nombre</label>
                        <span asp-validation-for="NombreNivel" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Actualizar
                    </button>
                    <a asp-controller="Niveles" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </form>
            </div>
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>
