@model FISCA.Dominio.Entidades.Asignacion

<h2>Actualizar Asignación</h2>

<form asp-action="Actualizar" method="post">
    <input asp-for="IdAsignacion" type="hidden" />

    <div class="form-floating py-2 col-12">
        <input asp-for="Descripcion" class="form-control border shadow" />
        <label asp-for="Descripcion" class="ms-2">Descripción</label>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-floating py-2 col-12">
        <input asp-for="IdDocente" class="form-control border shadow" />
        <label asp-for="IdDocente" class="ms-2">ID Docente</label>
        <span asp-validation-for="IdDocente" class="text-danger"></span>
    </div>

    <div class="form-floating py-2 col-12">
        <input asp-for="IdAsignatura" class="form-control border shadow" />
        <label asp-for="IdAsignatura" class="ms-2">ID Asignatura</label>
        <span asp-validation-for="IdAsignatura" class="text-danger"></span>
    </div>

    <div class="form-floating py-2 col-12">
        <input asp-for="IdGrupo" class="form-control border shadow" />
        <label asp-for="IdGrupo" class="ms-2">ID Grupo</label>
        <span asp-validation-for="IdGrupo" class="text-danger"></span>
    </div>

    <div class="form-floating py-2 col-12">
        <input asp-for="IdTurno" class="form-control border shadow" />
        <label asp-for="IdTurno" class="ms-2">ID Turno</label>
        <span asp-validation-for="IdTurno" class="text-danger"></span>
    </div>

    <div class="form-floating py-2 col-12">
        <input asp-for="IdHorario" class="form-control border shadow" />
        <label asp-for="IdHorario" class="ms-2">ID Horario</label>
        <span asp-validation-for="IdHorario" class="text-danger"></span>
    </div>

    <div class="form-floating py-2 col-12">
        <input asp-for="Estado" class="form-control border shadow" />
        <label asp-for="Estado" class="ms-2">Estado</label>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <div class="form-floating py-2 col-12">
        <input asp-for="NumeroAsignacion" class="form-control border shadow" />
        <label asp-for="NumeroAsignacion" class="ms-2">Número Asignación</label>
        <span asp-validation-for="NumeroAsignacion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="bi bi-check-circle"></i> Actualizar
    </button>
    <a asp-controller="Asignacion" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-x-circle"></i> Cancelar
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}